<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center" id="top-bar">
            <div class="jumbotron">
                <div class="container text-center">
                    <h1>Eat-Da-Burgers!</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="container col-xs-6 text-center">
                <h3>Available Burgers</h3>
            </div>
            <div class="container col-xs-6 text-center">
                <h3>Devoured Burgers</h3>
            </div>
        </div>
        <br>
        <div class="col-xs-6 text-center" class="task">
            <div class="row">
                {{#each burger_data}}
                {{#unless this.devoured}}
                <div class="col-xs-9 text-center">
                    <pre>{{this.id}}.{{this.burger_name}}
                    </pre>
                </div>
                <div class="col-xs-3 text-center">
                    <form class="devour-form button-size">
                        <input input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
                        <button type="submit" class="btn btn-primary">Eat it!</button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
        <div class="col-xs-6 text-center" class="task">
            {{#each burger_data}}
            {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.id}}.{{this.burger_name}}" readonly>
            {{/if}}
            {{/each}}
        </div>
    </div>
    <br>
</div>

<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center enter_section">
            <form action="/burgers/create" method="POST">
                <input type="text" class="form-control" name="burger_name" value="" id="enter_text">
                <br>
                <button type="submit" class="btn btn-info" id="text-enter-btn">Submit</button>
            </form>
            <br>
            <p>Enter the name of a burger and click Submit to see it appear in Available Burgers.</p>
        </div>
    </div>
</div>

